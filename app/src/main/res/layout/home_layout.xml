<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FAF6F0">

    <!-- MAIN CONTENT -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="16dp">

        <!-- START TOUR -->
        <LinearLayout
            android:id="@+id/startTourBox"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:background="@drawable/box_background"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="12dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <TextView
                android:id="@+id/startTourText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="START TOUR"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginBottom="8dp" />

            <ImageView
                android:id="@+id/startTourImage"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:scaleType="centerCrop"
                android:src="@drawable/tour_code_icon" />
        </LinearLayout>

        <!-- GRID MENU -->
        <GridLayout
            android:id="@+id/gridLayout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:columnCount="2"
            android:rowCount="2"
            android:layout_marginTop="16dp"
            android:layout_marginHorizontal="16dp"
            android:alignmentMode="alignMargins"
            android:rowOrderPreserved="false"
            app:layout_constraintTop_toBottomOf="@id/startTourBox"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <!-- Map -->
            <LinearLayout
                android:id="@+id/btnMap"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:background="@drawable/map_icon"
                android:backgroundTint="@color/white"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_margin="8dp"
                android:padding="8dp">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Map"
                    android:textSize="14sp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="8dp"/>

                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/map_icon"/>

            </LinearLayout>

            <!-- Tickets -->
            <LinearLayout
                android:id="@+id/btnTickets"
                android:layout_width="0dp"
                android:layout_height="110dp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:background="@drawable/ticket_icon"
                android:backgroundTint="@color/white"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_margin="8dp"
                android:padding="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tickets"
                    android:textSize="14sp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="8dp"/>

                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/ticket_icon"/>
            </LinearLayout>

            <!-- Gift Shop -->
            <LinearLayout
                android:id="@+id/btnGiftShop"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:background="@drawable/gift_shop_icon"
                android:backgroundTint="@color/white"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_margin="8dp"
                android:padding="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Gift Shop"
                    android:textSize="14sp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="8dp"/>

                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/gift_shop_icon"/>
            </LinearLayout>

            <!-- Contact Us -->
            <LinearLayout
                android:id="@+id/btnContact"
                android:layout_width="0dp"
                android:layout_height="110dp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:background="@drawable/contact_us"
                android:backgroundTint="@color/white"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_margin="8dp"
                android:padding="0dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Contact Us"
                    android:textSize="14sp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="8dp"/>

                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/contact_us"/>
            </LinearLayout>
        </GridLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- DIM BACKGROUND OVERLAY -->
    <View
        android:id="@+id/qrOverlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#80000000"
        android:visibility="gone" />

    <!-- QR POPUP -->
    <LinearLayout
        android:id="@+id/qrPopup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:background="@drawable/box_background"
        android:elevation="12dp"
        android:padding="16dp"
        android:visibility="gone">

        <!-- Close icon -->
        <ImageView
            android:id="@+id/btnClosePopup"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="end"
            android:src="@drawable/ic_close"
            android:contentDescription="Close"
            android:padding="4dp" />

        <!-- Manual Code Input -->
        <EditText
            android:id="@+id/codeInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter Code"
            android:inputType="text"
            android:background="@drawable/edit_text_border"
            android:padding="12dp"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="12dp" />

        <!-- Submit button -->
        <Button
            android:id="@+id/btnSubmitCode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Submit"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="8dp" />

        <!-- QR Code Scanner Button -->
        <Button
            android:id="@+id/btnLaunchQrScanner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Scan QR Code"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="12dp" />
    </LinearLayout>
</FrameLayout>
