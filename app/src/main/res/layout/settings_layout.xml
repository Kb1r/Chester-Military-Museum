<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:id="@+id/settingsContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Accessibility -->
        <TextView
            android:id="@+id/toggleAccessibility"
            style="@style/SettingTitleStyle"
            android:text="ðŸ“¶ Accessibility Mode" />

        <LinearLayout
            android:id="@+id/sectionAccessibility"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="12dp"
            android:visibility="gone">

            <RadioGroup
                android:id="@+id/accessibilityGroup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <RadioButton
                    android:id="@+id/rbDefault"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Default" />

                <RadioButton
                    android:id="@+id/rbHighContrast"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="High Contrast" />

                <RadioButton
                    android:id="@+id/rbProtanopia"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Protanopia" />

                <RadioButton
                    android:id="@+id/rbDeuteranopia"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Deuteranopia" />

                <RadioButton
                    android:id="@+id/rbTritanopia"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tritanopia" />
            </RadioGroup>
        </LinearLayout>

        <!-- Font Size -->
        <TextView
            android:id="@+id/toggleFont"
            style="@style/SettingTitleStyle"
            android:text="ðŸ”¤ Font Size" />

        <LinearLayout
            android:id="@+id/sectionFont"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="gone"
            android:padding="12dp">

            <Button
                android:id="@+id/btnSmallFont"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Small" />

            <Button
                android:id="@+id/btnMediumFont"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Medium"
                android:layout_marginStart="8dp" />

            <Button
                android:id="@+id/btnLargeFont"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Large"
                android:layout_marginStart="8dp" />
        </LinearLayout>

        <!-- Language -->
        <TextView
            android:id="@+id/toggleLanguage"
            style="@style/SettingTitleStyle"
            android:text="ðŸŒ App Language" />

        <Spinner
            android:id="@+id/spinnerLanguage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:visibility="gone" />

        <!-- Audio Guide -->
        <TextView
            android:id="@+id/tvToggleAudio"
            style="@style/SettingTitleStyle"
            android:text="ðŸŽ§ Audio Guide" />

        <Switch
            android:id="@+id/switchAudioGuide"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Enable Audio Narration" />

        <!-- Notifications -->
        <TextView
            android:id="@+id/tvToggleNotifications"
            style="@style/SettingTitleStyle"
            android:text="ðŸ”” Notifications" />

        <Switch
            android:id="@+id/switchNotifications"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Enable Notifications" />

        <!-- Reset Button -->
        <Button
            android:id="@+id/btnResetSettings"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ðŸ” Reset to Default"
            android:layout_marginTop="24dp" />
    </LinearLayout>
</ScrollView>
