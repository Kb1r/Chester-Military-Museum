<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- 1) Base DayNight theme -->
    <style name="Base.Theme.ChesterMilitaryMuseum"
        parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorOnPrimary">@color/onPrimary</item>
        <item name="colorSecondary">@color/secondary</item>
        <item name="colorOnSecondary">@color/onSecondary</item>
        <item name="android:colorBackground">@color/background</item>
        <item name="colorOnBackground">@color/onBackground</item>
        <item name="colorSurface">@color/surface</item>
        <item name="colorOnSurface">@color/onSurface</item>
        <item name="android:forceDarkAllowed">true</item>
    </style>

    <!-- 2) Default app theme -->
    <style name="Theme.ChesterMilitaryMuseum"
        parent="Base.Theme.ChesterMilitaryMuseum" />

    <!-- 3) High-Contrast mode -->
    <style name="Theme.ChesterMilitaryMuseum.HighContrast"
        parent="Theme.ChesterMilitaryMuseum">
        <item name="colorPrimary">@color/highcontrast_primary</item>
        <item name="colorOnPrimary">@color/highcontrast_onPrimary</item>
        <item name="colorSecondary">@color/highcontrast_secondary</item>
        <item name="colorOnSecondary">@color/highcontrast_onSecondary</item>
        <item name="android:colorBackground">@color/highcontrast_background</item>
        <item name="colorOnBackground">@color/highcontrast_onBackground</item>
        <item name="colorSurface">@color/highcontrast_surface</item>
        <item name="colorOnSurface">@color/highcontrast_onSurface</item>
        <item name="android:forceDarkAllowed">false</item>
    </style>

    <!-- 4) Protanopia (blue vs yellow) -->
